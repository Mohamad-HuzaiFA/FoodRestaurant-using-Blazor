@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
@*         <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div> *@

        <article class="content px-4">
            @Body
        </article>

        <!-- Footer Section -->
        <footer class="text-center text-lg-start footer">
            <!-- Background Image with Overlay -->
            <div style="background: url('/Assets/bgfooter2.jpg') no-repeat center center; background-size:cover; width: 100%; padding: 40px 0; position: relative;">
                <div style="background-color: rgba(0, 0, 0, 0.7); width: 100%; height: 100%; position: absolute; top: 0; left: 0;"></div>

                <div class="container p-4" style="position: relative; z-index: 1; color: white;">
                    <div class="row">
                        <!-- Footer Column 1 -->
                        <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
                            <h1 class="fs-2 fw-bold" style="color: yellow; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Food Bistro</h1>
                            <p>&copy; 2024 Food Bistro. All rights reserved.</p>
                        </div>

                        <!-- Footer Column 2 -->
                        <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                            <p class="fs-4 fw-bold">Links</p>
                            <a href="/" class="d-block fs-5 text-white mb-2">Home</a>
                            <a href="/about" class="d-block fs-5 text-white mb-2">About</a>
                            <a href="/shop" class="d-block fs-5 text-white mb-2">Shop</a>
                            <a href="#" class="d-block fs-5 text-white mb-2">Cart</a>
                            <a href="#" class="d-block fs-5 text-white">Support</a>
                        </div>

                        <!-- Footer Column 3 -->
                        <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                            <p class="fs-4 fw-bold">Contact Information</p>
                            <p class="fs-5">
                                <i class="fas fa-map-marker-alt" style="margin-right: 10px;"></i>
                                1234 Main St, Anytown, USA
                            </p>
                            <p class="fs-5">
                                <i class="fas fa-phone" style="margin-right: 10px;"></i>
                                +1 (555) 123-4567
                            </p>
                            <p class="fs-5">
                                <i class="fas fa-envelope" style="margin-right: 10px;"></i>
                                info@foodbistro.com
                            </p>

                            <!-- Social Media Icons -->
                            <div class="d-flex justify-content-start mt-4">
                                <a href="#" class="mx-2">
                                    <img src="Assets/facebook.png" alt="Facebook" style="width: 24px; height: 24px;">
                                </a>
                                <a href="#" class="mx-2">
                                    <img src="Assets/twitter.png" alt="Twitter" style="width: 24px; height: 24px;">
                                </a>
                                <a href="#" class="mx-2">
                                    <img src="Assets/linkedin.png" alt="LinkedIn" style="width: 24px; height: 24px;">
                                </a>
                                <a href="#" class="mx-2">
                                    <img src="Assets/youtube.png" alt="YouTube" style="width: 24px; height: 24px;">
                                </a>
                                <a href="#" class="mx-2">
                                    <img src="Assets/instagram.png" alt="Instagram" style="width: 24px; height: 24px;">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

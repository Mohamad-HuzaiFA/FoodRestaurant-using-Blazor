@code{
    private List<Product> products = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = await productService.GetProducts() ?? new List<Product>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching products: {ex.Message}");
        }
    }
}
